{
  "mcpServers": {
    "gpt": {
      "command": "uv",
      "args": ["run", "gpt-mcp"],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "OPENAI_MODEL": "gpt-5",
        "SEARCH_CONTEXT_SIZE": "medium",
        "REASONING_EFFORT": "medium",
        "OPENAI_API_TIMEOUT": "60",
        "OPENAI_MAX_RETRIES": "3"
      },
      "cwd": "/Users/orangekame3/src/github.com/orangekame3/gpt-mcp"
    }
  }
}
